<div class="row">
    <div class="col-lg-9">
        <form role="form" class="form cdn-settings">
            <div class="panel panel-default">
                <div class="panel-heading">CDN Setting</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>CDN URL</label>
                        <input id="url" type="text" name="url" class="form-control" placeholder="Enter Your CDN URL">
                    </div>
                    <div class="form-group">
                        <label>Is Enable CDN</label>
                        <select id="enable" name="enable" class="form-control">
                            <option value = "1">Enable</option>
                            <option value = "0">Disabled</option>
                        </select>
                    </div>
                    <button type="button" class="btn btn-primary" id="save">Save Settings</button>
                </div>
            </div>
        </form>
    </div>
</div>